function [acc,thres] = lrAcc(x,y)
    n = size(x,1);
    b = mnrfit(x,y+1);
    % in the sigmoid function, the x value that corresponds to 0.5
    % probability is 0. because we want a threshold that corresponds to 0.5
    % 
    thres = -(b(1)/b(2));
    acc = sum(y==(x>=thres))/n;
%     pred = 1-round(logsig([ones(n,1) x]*b));
%     acc = sum(pred==y)/n;
end

